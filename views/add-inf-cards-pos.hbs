        <div class="form-floating mb-3">
          <textarea
            class="form-control"
            id="notes"
            name="notes"
            cols="30"
            rows="10"
            style="height:100px"
          >{{this.notes}}</textarea>
          <label for="floatingInput">Observações...</label>
        </div>
      </div>

      <div class="col-4 d-grid">
        <button type="submit" class="btn btn-primary">Gravar</button>
      </div>
    </div>
  </form>
