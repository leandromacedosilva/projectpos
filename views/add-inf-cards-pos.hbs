<body>
  {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      {{alert}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  {{/if}}
  <form
    action="/addinfocardspos"
    class="d-flex justify-content-center column g-3 needs-validation"
    method="post"
    novalidate
  >
    <div class="col-6">
      <div class="">
        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            placeholder="Name Operator"
            name="nameoperator"
            required
          />
          <label for="floatingInput">Nome do operador de caixa...</label>
        </div>
